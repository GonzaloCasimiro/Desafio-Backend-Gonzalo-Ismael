<div id="messagesList" class="max-w-md mx-auto my-4">
  {{#each messages}}
  <div class="flex items-start mb-4">
    <img src="" alt="" class="w-10 h-10 rounded-full mr-4">
    <div class="bg-gray-200 p-4 rounded-lg">
      <p class="font-semibold">{{user}}</p>
      <p class="text-gray-700">{{message}}</p>
    </div>
  </div>
  {{/each}}

  <form id="sendMessageForm" class="mt-4">
    <div class="flex items-center mb-2">
      <input id="userNameInput" type="text" placeholder="Nombre de usuario" class="w-1/3 py-2 px-3 border rounded-lg mr-2">
      <input id="messageInput" type="text" placeholder="Escribe tu mensaje..." class="w-2/3 py-2 px-3 border rounded-lg mr-2">
      <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded-md">Enviar mensaje</button>
    </div>
  </form>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/chat.js"></script>